@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
     <div class="col-md-6 col-lg-5">
       <div class="text-center mb-4">
             <h1 class="h3 fw-bold">Forgot Password?</h1>
                <p class="text-muted small">Enter your email to receive password reset instructions</p>
    </div>

            <div class="card shadow-sm">
         <div class="card-body p-4">
 @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
 @if (Model.IsSuccessful)
          {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @Model.StatusMessage
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
             </div>
    }
    else
        {
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @Model.StatusMessage
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
           </div>
       }
        }

       <form method="post">
    <div class="mb-3">
          <label asp-for="Input.Email" class="form-label">Email Address <span class="text-danger">*</span></label>
    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Enter your email address" />
  <span asp-validation-for="Input.Email" class="text-danger small"></span>
       </div>

              <div class="d-grid gap-2 mb-2">
       <button type="submit" class="btn btn-primary">Send Reset Link</button>
          </div>

    <div class="d-grid gap-2">
     <a href="/Login" class="btn btn-outline-secondary">Back to Login</a>
               </div>
             </form>

          <hr class="my-4" />

  <div class="alert alert-info" role="alert">
   <strong>?? Note:</strong> If an account exists with that email address, you will receive password reset instructions. Check your email (including spam folder) for the reset link.
               </div>
     </div>
     </div>
  </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
