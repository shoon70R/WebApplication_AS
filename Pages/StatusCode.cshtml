@page "{statusCode:int?}"
@model StatusCodeModel
@{
    ViewData["Title"] = $"Error {Model.StatusCode}";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger" role="alert">
      <h1 class="display-4 text-danger">
         <i class="fas fa-exclamation-circle"></i> Error @Model.StatusCode
       </h1>
    <p class="lead">@Model.ErrorMessage</p>
        
      @if (!string.IsNullOrEmpty(Model.ErrorDescription))
  {
         <p class="text-muted">@Model.ErrorDescription</p>
  }

      <hr />
         
       <div class="mt-4">
     <p class="text-muted mb-3">
   <small>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </small>
       </p>
          
          <a href="/" class="btn btn-primary me-2">
       <i class="fas fa-home"></i> Go to Home
            </a>
           
         @if (Model.StatusCode == 403)
        {
   <a href="/Login" class="btn btn-warning">
        <i class="fas fa-sign-in-alt"></i> Go to Login
            </a>
        }
        
       <button type="button" class="btn btn-secondary" onclick="window.history.back();">
          <i class="fas fa-arrow-left"></i> Go Back
       </button>
                </div>
   </div>

            @if (Model.ShowRequestId)
            {
        <div class="card mt-3">
        <div class="card-body">
      <h5 class="card-title">Debug Information</h5>
             <p class="card-text text-muted">
        <small>
     This information is only visible in development mode.
        <br />
        Status Code: <strong>@Model.StatusCode</strong>
         </small>
         </p>
     </div>
                </div>
        }
        </div>
    </div>
</div>
