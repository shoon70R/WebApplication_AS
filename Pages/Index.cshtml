@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-lg">
            <div class="card-body p-4">
        <h1 class="h3 fw-bold mb-4">Welcome Back!</h1>

         @if (User?.Identity?.IsAuthenticated == true)
     {
    <div class="profile-section">
              <h5 class="fw-semibold mb-3">Your Profile</h5>
      <div class="row mb-2">
    <div class="col-sm-4">
      <small class="text-muted fw-semibold">Name:</small>
   </div>
  <div class="col-sm-8">
       <p class="mb-0">@Model.FullName</p>
  </div>
  </div>

         <div class="row mb-2">
 <div class="col-sm-4">
           <small class="text-muted fw-semibold">Email:</small>
    </div>
         <div class="col-sm-8">
 <p class="mb-0">@Model.Email</p>
     </div>
      </div>

    <div class="row mb-2">
             <div class="col-sm-4">
            <small class="text-muted fw-semibold">Gender:</small>
          </div>
               <div class="col-sm-8">
      <p class="mb-0">@Model.Gender</p>
        </div>
       </div>

  <div class="row mb-2">
           <div class="col-sm-4">
        <small class="text-muted fw-semibold">Date of Birth:</small>
           </div>
    <div class="col-sm-8">
   <p class="mb-0">@(Model.DateOfBirth?.ToString("yyyy-MM-dd"))</p>
 </div>
        </div>

     <div class="row mb-3">
          <div class="col-sm-4">
     <small class="text-muted fw-semibold">NRIC:</small>
    </div>
              <div class="col-sm-8">
     <p class="mb-0">@Model.DecryptedNric</p>
     </div>
         </div>

      <hr class="my-4">

   <div class="d-grid gap-2">
      <a href="/ProtectedPage" class="btn btn-info btn-sm">Go to Protected Page</a>
      <a href="/ChangePassword" class="btn btn-primary btn-sm">Change Password</a>
      <form method="post" asp-page="/Login" asp-page-handler="Logout" style="display:inline;">
       <button type="submit" class="btn btn-danger btn-sm w-100">Logout</button>
   </form>
    </div>
   </div>
   }
                </div>
        </div>
      </div>
    </div>
</div>
